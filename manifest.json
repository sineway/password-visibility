{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "__MSG_name__",
    "description": "__MSG_description__",

    "author": "Sineway",
    "version": "3.0.0",

    "homepage_url": "https://github.com/sineway/pass-eye",

    "icons": {
        "16": "icons/pass-eye-16.png",
        "32": "icons/pass-eye-32.png",
        "64": "icons/pass-eye-64.png",
        "128": "icons/pass-eye-128.png",
        "256": "icons/pass-eye-256.png"
    },
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "browser_action": {},

    "commands": {
        "view_password": {
            "suggested_key": {
                "default": "Alt+Shift+P"
            },
            "description": "__MSG_commandViewPassword__"
        }
    }
}
